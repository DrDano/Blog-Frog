<div class="container">
<div class="row" name="dashboard-container">
<section class="col-4 w-auto">
  <h3 class="">Create New Post</h2>

    <div class="card w-auto">
        <div class="card-body w-100 text-center">
            <form id="create-post-form">
                <div>
                    <label for="post-title">Title</label>
                    <input type="text" id="post-title" name="post-title" />
                </div>
                <div class="top-buffer">
                    <label for="post-url">Link</label>
                    <input id="post-url" name="post-url" />
                </div>
                <button type="submit" class="btn btn-warning top-buffer">Create</button>
            </form>
        </div>
    </div>
</section>
{{#if posts.length}}
<section class="col-8 w-auto">
    <h2>Your Best Work</h2>
    <div class="card w-100 my-1 px-3 bg-light">
        <div class="card-body w-auto text-center">
            <ol>
                {{#each posts as |post|}}
                <div class="my-3 container">
                    <li>
                    <div class="col-10">
                        <a href="../posts/{{post.id}}" class="link-unstyled link-dark">{{post.title}}</a>
                    </div class="col-2">
                    <button class="btn btn-secondary btn-sm" name="edit-post" id="{{post.id}}">Edit post</button>
                    <button class="btn btn-danger btn-sm" name="delete-post" id="{{post.id}}">Delete Post</button>
                    </li>
                </div>
                {{/each}}
            </ol>
        </div>
    </div>
</section>
{{/if}}
</div>
</div>

<script src="/javascript/create-post.js"></script>
<script src="/javascript/edit-post.js"></script>