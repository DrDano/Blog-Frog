<div class="container">
  <dl class="row my-6">
    {{#each posts as |post|}}
      <div name="user-post" class="top-buffer">
        <dt>
          <h5 user-id="{{user.id}}">{{user.username}}</h5>
          <a
            class="link-light"
            href="{{post_url}}"
            target="_blank"
          >{{title}}</a>
        </dt>
        <dd>
          <a class="link-unstyled link-dark" href="posts/{{id}}">
            {{comments.length}}
            comment(s)</a>
        </dd>
      </div>
    {{/each}}
  </dl>
</div>