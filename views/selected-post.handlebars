<article>
  <div>
    <a class="link-warning font-size-20 link-unstyled" href="{{post_url}}" target="_blank"><h3>{{post.title}}</h3></a>
  </div>

  {{#if loggedIn}}
  <form id="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit" class="btn btn-secondary" name="comment-submit">Submit</button>
    </div>
  </form>
  {{/if}}
  <div>
    {{#each post.comments}}
      <section class="bg-success">
        <div>
          {{user.username}} 
          on
          {{created_at}}
        </div>
        <div>
          {{comment_body}}
        </div>
      </section>
      <br>
    {{/each}}
  </div>
</article>

{{!-- {{#if loggedIn}} --}}
<script src="/javascript/comment.js"></script>
{{!-- {{/if}} --}}